{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "framework": "nextjs",
  "functions": {
    "api/**/*": {
      "maxDuration": 300,
      "memory": 3008,
      "runtime": "nodejs20.x"
    },
    "pages/api/**/*": {
      "maxDuration": 300,
      "memory": 3008
    }
  },
  "env": {
    "NODE_ENV": "production",
    "VERCEL_TIMEOUT": "300",
    "ENABLE_LONG_REQUESTS": "true"
  },
  "regions": [
    "gru1"
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "X-Max-Duration",
          "value": "300"
        },
        {
          "key": "Cache-Control",
          "value": "no-store"
        }
      ]
    }
  ]
}
